<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Faculty Management System</display-name>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>

    <!-- Course Servlet -->
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>servlet.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/api/courses</url-pattern>
    </servlet-mapping>

    <!-- Degree Servlet -->
    <servlet>
        <servlet-name>DegreeServlet</servlet-name>
        <servlet-class>servlet.DegreeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DegreeServlet</servlet-name>
        <url-pattern>/api/degrees</url-pattern>
    </servlet-mapping>

    <!-- Department Servlet -->
    <servlet>
        <servlet-name>DepartmentServlet</servlet-name>
        <servlet-class>servlet.DepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentServlet</servlet-name>
        <url-pattern>/api/departments</url-pattern>
    </servlet-mapping>

    <!-- Lecturer Servlet -->
    <servlet>
        <servlet-name>LecturerServlet</servlet-name>
        <servlet-class>servlet.LecturerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LecturerServlet</servlet-name>
        <url-pattern>/api/lecturers</url-pattern>
    </servlet-mapping>

    <!-- Student Servlet -->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>servlet.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/api/students</url-pattern>
    </servlet-mapping>

    <!-- User Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/users</url-pattern>
    </servlet-mapping>

</web-app>
